<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile Information</title>
  <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
  <div class="background">
    <div class="profile-container">
      <div class="logo">
        <img src="ONETH.png" height="30px" width="30px" alt=" ">
    </div>
      <h1>Profile Information</h1>

      <form action="/profile" method="POST" enctype="multipart/form-data">
        <div class="form-columns">

          <!-- Left Column -->
          <div class="form-column">
            <div class="form-group">
              <label for="fullName">Full Name:</label>
              <input type="text" id="fullName" name="fullName" required>
            </div>
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="contact">Country:</label>
              <input type="text" id="contact" name="contact">
            </div>
            <div class="form-group">
              <label for="country">District:</label>
              <input type="text" id="country" name="country">
            </div>
            <div class="form-group">
              <label for="birthCertificate">Upload Birth Certificate:</label>
              <input type="file" id="birthCertificate" name="birthCertificate">
            </div>
          </div>

          <!-- Right Column -->
          <div class="form-column">
            <div class="form-group">
              <label for="region">Age:</label>
              <input type="text" id="region" name="region">
            </div>
            <div class="form-group">
              <label for="job">Contact:</label>
              <input type="text" id="job" name="job">
            </div>
            <div class="form-group">
              <label for="street">Region:</label>
              <input type="text" id="street" name="street">
            </div>
            <div class="form-group">
              <label for="age">Street/Village:</label>
              <input type="number" id="age" name="age">
            </div>
            <div class="form-group">
              <label for="idCard">Upload Identity Card (NIDA, License, Voter ID):</label>
              <input type="file" id="idCard" name="idCard">
            </div>
          </div>
        </div>

        <div class="form-submit">
          <button type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>





